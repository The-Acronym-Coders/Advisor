{
  "$id": "https://schemas.teamacronymcoders.com/advisor_responses.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Advisor Response Format",
  "properties": {
    "type": {
      "type": "string",
      "pattern": ".+:.+"
    },
    "info": {
      "type": "object",
      "anyOf": [
        {
          "properties": {
            "langKey": {
              "type": "string"
            }
          },
          "required": ["langKey"]
        },
        {
          "properties": {
            "soundName": {
              "$ref": "https://raw.githubusercontent.com/Levertion/minecraft-json-schema/master/java/shared/namespaced_location.json"
            }
          }
        }
      ]
    },
    "triggers": {
      "anyOf": [
        {
          "$ref": "https://raw.githubusercontent.com/Levertion/minecraft-json-schema/master/java/shared/namespaced_location.json"
        },
        {
          "type": "object",
          "properties": {
            "weight": {
              "type": "integer",
              "minimum": 1
            },
            "name": {
              "$ref": "https://raw.githubusercontent.com/Levertion/minecraft-json-schema/master/java/shared/namespaced_location.json"
            }
          }
        },
        {
          "type": "array",
          "items": {
            "$ref": ""
          }
        }
      ]
    }
  }
}